@using WebMVC.Entities
@using WebMVC.Entities;
@using PagedList.Mvc;
@model PagedList.IPagedList<WebMVC.Entities.ThongKeGopYCauHoi_Result>
@{
    ViewBag.Title = "Thống Kê Góp Ý Cấu Hỏi";
    int pageNumber = (int)ViewBag.Page;
}

<h3>Danh sách đơn vị</h3>

@using (Html.BeginForm())
{
    <p class="pull-right">
        Tìm kiếm: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
    </p>
}
<table class="table table-hover">
    <tr>
        <th>STT</th>
        <th>Tên Tiêu Chí</th>
        <th>Số Lượt Đánh Giá</th>
        <th>Chi tiet</th>
    </tr>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        <tr>

            <td>@(pageNumber + i + 1)</td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTieuChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuot)
            </td>
            <td>
              Chi Tiet
            </td>
            @*<td>
                <div class="pull-right">
                    <a href='/Admin/DonVi/Edit/@item.DonViID' class="btn btn-primary btn-update" title="Cập nhật, chỉnh sửa"> <i class="glyphicon glyphicon-pencil"></i></a>
                </div>
            </td>*@
        </tr>
    }
</table>
@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <!-- modal -->
    <div class="modal fade"
         id="myModal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
        </div>
    </div>
