@using WebMVC.Entities
@using System.Collections.Generic;
@using System.Web.Helpers;
@model WebMVC.Entities.CauTraLoiExtend

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Areas/Admin/Content/js/bootstrap-multiselect.js"></script>
<link href="~/Areas/Admin/Content/dist/css/bootstrap-multiselect.css" rel="stylesheet" />

@using (Html.BeginForm("Create", "CauTraLoi", FormMethod.Post, htmlAttributes: new { @class = "form-add" }))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)

    <div class="modal-content">

        <div class="modal-header">
            Tạo mới câu trả lời
        </div>

        <div class="modal-body">

            <form class="form-horizontal">

                <div class="form-group">
                    <label class="control-label col-xs-3 float_left text-right clsOdd">Tên câu trả lời</label>
                    <div class="col-xs-8">
                        <input class="form-control required" id="TenCauTraLoi" name="TenCauTraLoi" placeholder="Tên câu trả lời..." maxlength="1000"/>
                        @Html.ValidationMessageFor(m => m.TenCauTraLoi)
                    </div>
                </div>
                <br />
                <div class="clearfix"></div>
                <div class="form-group">
                    <label class="control-label col-xs-3 float_left text-right clsEven">Tên vắn tắt</label>
                    <div class="col-xs-8 heightrow">
                        <input type="text" class="form-control" id="TenVanTat" name="TenVanTat" placeholder="Tên vắn tắt..." maxlength="100" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3 float_left text-right">Giá trị</label>
                    <div class="col-xs-8">
                        @Html.DropDownListFor(x => x.GiaTri, Model.ListGiaTri)
                    </div>
                </div>
                
            </form>

            <div class="clearfix"></div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Trở về</button>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </div>

}  