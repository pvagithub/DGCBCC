@using WebMVC.Entities
@using System.Collections.Generic;
@using System.Web.Helpers;
@model WebMVC.Entities.NhomTieuChi

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("Create", "NhomTieuChi", FormMethod.Post, htmlAttributes: new { @class = "form-add" }))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)

    <div class="modal-content">

        <div class="modal-header">
            Thêm mới nhóm chỉ tiêu
        </div>

        <div class="modal-body">

            <div class="clearfix"></div>
            <div class="form-group">
                <label class="control-label col-xs-4 text-right">Tên nhóm chỉ tiêu</label>
                <div class="col-xs-8">
                    <input type="text" class="form-control required" id="TenNhomTieuChi" name="TenNhomTieuChi" placeholder="Nhập tên nhóm chỉ tiêu...">
                    @Html.ValidationMessageFor(m => m.TenNhomTieuChi)
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Trở về</button>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </div>

}  