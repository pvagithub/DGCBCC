                }]
            });
        });

        $('#highcharts_5').highcharts({
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false,
                type: 'pie'
            },
            title: {
                text: 'Thống kê tháng 8 năm 2015'
            },
            tooltip: {
                pointFormat: '  <b>{point.percentage:.1f}%</b>'
            },
            credits: {
                enabled: false
            },
            exporting: {
                enabled: false
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: false
                    },
                    showInLegend: true
                }
            },
            series: [{

                colorByPoint: true,
                data: [{
                    name: "Không hài lòng",
                    y: 10
                }, {
                    name: "Tạm chấp nhận",
                    y: 20,
                    sliced: true,
                    selected: true
                }, {
                    name: "Hài lòng",
                    y: 70
                }]
            }]
        });
    </script>
}