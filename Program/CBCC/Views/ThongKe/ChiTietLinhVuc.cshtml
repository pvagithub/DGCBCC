                },
                yAxis: {
                    min: 0,
                    title: {
                        text: 'Số phần trăm (%)'
                    }
                },
                tooltip: {
                    pointFormat: '<span style="color:{series.color}">{series.name}</span>: <b>{point.y}</b> ({point.percentage:.0f}%)<br />',
                    shared: true
                },
                plotOptions: {
                    column: {
                        stacking: 'percent'
                    }
                },
                series: [{
                    name: 'Không hài lòng',
                    data: [5, 1, 4, 0, 1]
                }, {
                    name: 'Tạm chấp nhận',
